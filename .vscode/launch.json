{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Express Server",
      "type": "node",
      "request": "launch",
      "runtimeArgs": [
        "-r", "ts-node/register",
        "-r", "tsconfig-paths/register"
      ],
      "args": [
        "src/server.ts"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "env": {
        "NODE_ENV": "development"
      },
      "preLaunchTask": "kill-port-5000",
    }
  ]
}
  